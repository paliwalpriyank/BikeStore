@model IEnumerable<IS7012.ProjectAssignment.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.custName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.amountPaid)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.custName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.amountPaid)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @if(!item.placeOrder)
            { 
            @Html.ActionLink("Place Order", "PlaceOrder", new { id = item.Id })
            }
            else
            {
                <strong><span>Order Placed</span></strong>
            }
        </td>
    </tr>
}

</table>
